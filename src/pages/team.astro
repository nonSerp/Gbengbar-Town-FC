    <style>
        :root {
            --club-green: #1a4d2e;
            --club-gold: #f4b53f;
            --club-dark: #0a1f14;
            --club-light: #f5f5f5;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--club-light);
            color: var(--club-dark);
            line-height: 1.6;
        }

        /* Hero Section */
        .hero {
            background: linear-gradient(135deg, var(--club-green) 0%, var(--club-dark) 100%);
            color: white;
            padding: 100px 20px 80px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="none" stroke="rgba(244,181,63,0.1)" stroke-width="0.5"/></svg>');
            background-size: 80px 80px;
            opacity: 0.4;
        }

        .hero-content {
            position: relative;
            z-index: 1;
            max-width: 900px;
            margin: 0 auto;
        }

        .hero h1 {
            font-size: 4rem;
            margin-bottom: 20px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .hero p {
            font-size: 1.4rem;
            opacity: 0.95;
            margin-bottom: 15px;
        }

        .team-badge {
            display: inline-block;
            background: var(--club-gold);
            color: var(--club-dark);
            padding: 12px 35px;
            border-radius: 30px;
            font-weight: 700;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            margin-top: 20px;
        }

        /* Main Container */
        .team-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 80px 20px;
        }

        /* Section Header */
        .section-header {
            text-align: center;
            margin-bottom: 60px;
        }

        .section-header h2 {
            font-size: 3rem;
            color: var(--club-green);
            margin-bottom: 15px;
            font-weight: 700;
        }

        .section-header p {
            font-size: 1.2rem;
            color: #666;
            max-width: 700px;
            margin: 0 auto;
        }

        /* Filter Tabs */
        .filter-section {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 60px;
            flex-wrap: wrap;
        }

        .filter-btn {
            padding: 12px 30px;
            background: white;
            border: 2px solid var(--club-green);
            color: var(--club-green);
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            font-size: 1rem;
        }

        .filter-btn:hover,
        .filter-btn.active {
            background: var(--club-green);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(26, 77, 46, 0.3);
        }

        /* Team Stats */
        .team-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 25px;
            margin-bottom: 70px;
        }

        .stat-box {
            background: white;
            padding: 30px;
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 4px 20px rgba(26, 77, 46, 0.1);
            transition: all 0.3s ease;
        }

        .stat-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 30px rgba(26, 77, 46, 0.2);
        }

        .stat-number {
            font-size: 3rem;
            font-weight: 700;
            color: var(--club-green);
            margin-bottom: 10px;
        }

        .stat-label {
            color: #666;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Players Grid */
        .players-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 35px;
            margin-bottom: 60px;
        }

        .player-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 6px 25px rgba(26, 77, 46, 0.12);
            transition: all 0.4s ease;
            cursor: pointer;
            position: relative;
        }

        .player-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 40px rgba(26, 77, 46, 0.25);
        }

        .player-image {
            width: 100%;
            height: 350px;
            background: linear-gradient(135deg, var(--club-green) 0%, var(--club-dark) 100%);
            position: relative;
            overflow: hidden;
        }

        .player-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.4s ease;
        }

        .player-card:hover .player-image img {
            transform: scale(1.08);
        }

        .player-number {
            position: absolute;
            top: 15px;
            right: 15px;
            background: var(--club-gold);
            color: var(--club-dark);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 1.3rem;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
        }

        .player-position {
            position: absolute;
            bottom: 15px;
            left: 15px;
            background: rgba(26, 77, 46, 0.95);
            color: white;
            padding: 8px 20px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .player-info {
            padding: 25px;
        }

        .player-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--club-dark);
            margin-bottom: 8px;
        }

        .player-role {
            color: var(--club-green);
            font-weight: 600;
            font-size: 1rem;
            margin-bottom: 15px;
        }

        .player-stats {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 12px;
            padding-top: 15px;
            border-top: 2px solid var(--club-light);
        }

        .stat-item {
            text-align: center;
        }

        .stat-value {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--club-green);
        }

        .stat-name {
            font-size: 0.75rem;
            color: #888;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .player-social {
            display: flex;
            gap: 10px;
            margin-top: 15px;
            justify-content: center;
        }

        .social-link {
            width: 35px;
            height: 35px;
            background: var(--club-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .social-link:hover {
            background: var(--club-green);
            transform: translateY(-3px);
        }

        .social-link svg {
            width: 18px;
            height: 18px;
            fill: var(--club-dark);
        }

        .social-link:hover svg {
            fill: white;
        }

        /* Coaching Staff Section */
        .coaching-section {
            margin-top: 80px;
        }

        .staff-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
        }

        .staff-card {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(26, 77, 46, 0.1);
            display: flex;
            align-items: center;
            gap: 20px;
            transition: all 0.3s ease;
        }

        .staff-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(26, 77, 46, 0.2);
        }

        .staff-avatar {
            width: 80px;
            height: 80px;
            background: var(--club-green);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--club-gold);
            font-weight: 700;
            font-size: 2rem;
            flex-shrink: 0;
        }

        .staff-details h3 {
            color: var(--club-dark);
            font-size: 1.3rem;
            margin-bottom: 5px;
        }

        .staff-details p {
            color: var(--club-green);
            font-weight: 600;
            margin-bottom: 8px;
        }

        .staff-details span {
            color: #888;
            font-size: 0.9rem;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .hero h1 {
                font-size: 3rem;
            }

            .players-grid {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 25px;
            }
        }

        @media (max-width: 768px) {
            .hero {
                padding: 70px 20px 50px;
            }

            .hero h1 {
