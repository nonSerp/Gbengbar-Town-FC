    <title>News & Articles</title>
    <style>
        :root {
            --club-green: #1a4d2e;
            --club-gold: #f4b53f;
            --club-dark: #0a1f14;
            --club-light: #f5f5f5;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--club-light);
            color: var(--club-dark);
            line-height: 1.6;
        }

        /* Hero Section */
        .hero {
            background: linear-gradient(135deg, var(--club-green) 0%, var(--club-dark) 100%);
            color: white;
            padding: 80px 20px 60px;
            text-align: center;
        }

        .hero h1 {
            font-size: 3.5rem;
            margin-bottom: 15px;
            font-weight: 700;
        }

        .hero p {
            font-size: 1.3rem;
            opacity: 0.9;
            max-width: 700px;
            margin: 0 auto;
        }

        /* Main Container */
        .news-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 60px 20px;
        }

        /* Filter Section */
        .filter-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            flex-wrap: wrap;
            gap: 20px;
        }

        .filter-tabs {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .filter-tab {
            padding: 10px 24px;
            background: white;
            border: 2px solid var(--club-green);
            color: var(--club-green);
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            font-size: 0.95rem;
        }

        .filter-tab:hover,
        .filter-tab.active {
            background: var(--club-green);
            color: white;
        }

        .search-box {
            position: relative;
        }

        .search-box input {
            padding: 12px 45px 12px 20px;
            border: 2px solid #e0e0e0;
            border-radius: 25px;
            width: 300px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        .search-box input:focus {
            outline: none;
            border-color: var(--club-green);
        }

        .search-box svg {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            width: 20px;
            height: 20px;
            fill: #666;
        }

        /* Featured Article */
        .featured-article {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            margin-bottom: 60px;
            box-shadow: 0 8px 30px rgba(26, 77, 46, 0.15);
            display: grid;
            grid-template-columns: 1fr 1fr;
            transition: transform 0.3s ease;
        }

        .featured-article:hover {
            transform: translateY(-5px);
        }

        .featured-image {
            background: linear-gradient(135deg, var(--club-green) 0%, var(--club-dark) 100%);
            min-height: 400px;
            position: relative;
            overflow: hidden;
        }

        .featured-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.8;
        }

        .featured-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            background: var(--club-gold);
            color: var(--club-dark);
            padding: 8px 20px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .featured-content {
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .featured-category {
            color: var(--club-gold);
            font-weight: 700;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 15px;
        }

        .featured-content h2 {
            color: var(--club-green);
            font-size: 2.5rem;
            margin-bottom: 20px;
            line-height: 1.2;
        }

        .featured-meta {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
            color: #666;
            font-size: 0.9rem;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .meta-item svg {
            width: 16px;
            height: 16px;
            fill: var(--club-green);
        }

        .featured-excerpt {
            color: #555;
            font-size: 1.1rem;
            line-height: 1.8;
            margin-bottom: 25px;
        }

        .read-more-btn {
            background: var(--club-green);
            color: white;
            padding: 14px 35px;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            align-self: flex-start;
            text-decoration: none;
            display: inline-block;
        }

        .read-more-btn:hover {
            background: var(--club-dark);
            transform: translateX(5px);
        }

        /* Articles Grid */
        .articles-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
        }

        .article-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(26, 77, 46, 0.1);
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .article-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 30px rgba(26, 77, 46, 0.2);
        }

        .article-image {
            background: linear-gradient(135deg, var(--club-green) 0%, var(--club-dark) 100%);
            height: 220px;
            position: relative;
            overflow: hidden;
        }

        .article-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .article-card:hover .article-image img {
            transform: scale(1.1);
        }

        .article-category {
            position: absolute;
            top: 15px;
            left: 15px;
            background: var(--club-gold);
            color: var(--club-dark);
            padding: 6px 16px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .article-body {
            padding: 25px;
        }

        .article-body h3 {
            color: var(--club-green);
            font-size: 1.4rem;
            margin-bottom: 12px;
            line-height: 1.3;
        }

        .article-meta {
            display: flex;
            gap: 15px;
            margin-bottom: 15px;
            color: #888;
            font-size: 0.85rem;
        }

        .article-excerpt {
            color: #666;
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .article-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 15px;
            border-top: 2px solid var(--club-light);
        }

        .author-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .author-avatar {
            width: 35px;
            height: 35px;
            background: var(--club-green);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 0.9rem;
        }

        .author-name {
            color: var(--club-dark);
            font-weight: 600;
            font-size: 0.9rem;
        }

        .read-time {
            color: #888;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .read-time svg {
            width: 14px;
            height: 14px;
            fill: var(--club-gold);
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-top: 50px;
        }

        .page-btn {
            padding: 10px 18px;
            background: white;
            border: 2px solid var(--club-green);
            color: var(--club-green);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
        }

        .page-btn:hover,
        .page-btn.active {
            background: var(--club-green);
            color: white;
        }

        .page-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* Newsletter Section */
        .newsletter {
            background: linear-gradient(135deg, var(--club-green) 0%, var(--club-dark) 100%);
            color: white;
            padding: 60px 20px;
            text-align: center;
            margin-top: 80px;
            border-radius: 16px;
        }

        .newsletter h2 {
            font-size: 2.5rem;
            margin-bottom: 15px;
        }

        .newsletter p {
            font-size: 1.1rem;
            margin-bottom: 30px;
            opacity: 0.9;
        }

        .newsletter-form {
            display: flex;
            gap: 15px;
            max-width: 600px;
            margin: 0 auto;
            flex-wrap: wrap;
            justify-content: center;
        }

        .newsletter-form input {
            flex: 1;
            min-width: 250px;
            padding: 16px 20px;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
        }

        .newsletter-form button {
            padding: 16px 40px;
            background: var(--club-gold);
            color: var(--club-dark);
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .newsletter-form button:hover {
            background: #d99f2f;
            transform: translateY(-2px);
        }

        /* Responsive */
        @media (max-width: 968px) {
            .hero h1 {
                font-size: 2.5rem;
            }

            .featured-article {
                grid-template-columns: 1fr;
            }

            .featured-image {
                min-height: 300px;
            }

            .featured-content {
                padding: 35px;
            }

            .featured-content h2 {
                font-size: 2rem;
            }

            .articles-grid {
                grid-template-columns: 1fr;
            }

            .filter-section {
                flex-direction: column;
                align-items: flex-start;
            }

            .search-box input {
                width: 100%;
            }
        }

        @media (max-width: 640px) {
            .hero {
                padding: 50px 20px 40px;
            }

            .hero h1 {
                font-size: 2rem;
            }

            .hero p {
