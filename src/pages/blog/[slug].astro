---
// src/pages/blog/[slug].astro
import SEO from '../../components/SEO.astro';

const { slug } = Astro.params;
const posts = [
  { slug: 'post-1', title: 'First Post', content: '...' },
  { slug: 'post-2', title: 'Second Post', content: '...' },
];

const currentPost = posts.find(p => p.slug === slug);
const relatedPosts = posts.filter(p => p.slug !== slug);
---

<html lang="en">
  <SEO 
    title={currentPost.title}
    description="Blog post description"
    canonical={`gbengbartown.com/blog/${slug}`}
  />
  <body>
    <article>
      <h1>{currentPost.title}</h1>
      <div set:html={currentPost.content} />
      
      <!-- Internal backlinks to related content -->
      <section class="related-posts">
        <h2>Related Articles</h2>
        <ul>
          {relatedPosts.map(post => (
            <li>
              <a href={`/blog/${post.slug}`}>{post.title}</a>
            </li>
          ))}
        </ul>
      </section>
    </article>
  </body>
</html>