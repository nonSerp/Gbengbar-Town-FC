---
// src/components/SEO.astro
interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
}

const { title, description, canonical, ogImage } = Astro.props;
const siteUrl = "https://gbengbartown.com";
---

<head>
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <!-- Canonical URL (important for SEO) -->
  <link rel="canonical" href={canonical || siteUrl + Astro.url.pathname} />
  
  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonical || siteUrl + Astro.url.pathname} />
  <meta property="og:image" content={ogImage || `${siteUrl}/og-image.jpg`} />
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  
  <!-- Structured Data (JSON-LD) -->
  <script type="application/ld+json" is:inline>
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "{title}",
      "url": "{siteUrl}"
    }
  </script>
</head>