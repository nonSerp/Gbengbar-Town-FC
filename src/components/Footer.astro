<style>
  footer {
    background: linear-gradient(135deg, var(--club-dark) 0%, var(--club-green) 100%);
    color: white;
    padding: 3rem 0 1rem;
    margin-top: 4rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3 {
    color: var(--club-gold);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .footer-logo {
    height: 80px;
    width: auto;
    margin-bottom: 1rem;
  }

  .club-motto {
    font-style: italic;
    color: var(--club-gold);
    font-weight: 600;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section ul li {
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: white;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-section a:hover {
    color: var(--club-gold);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    font-size: 1.5rem;
  }

  .social-links a {
    transition: transform 0.3s ease;
  }

  .social-links a:hover {
    transform: scale(1.2);
  }

  .footer-bottom {
    border-top: 1px solid rgba(244, 181, 63, 0.3);
    padding-top: 1rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.8);
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>
